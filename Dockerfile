FROM loads/alpine:3.8

LABEL maintainer="tysh"

###############################################################################
#                                INSTALLATION
###############################################################################

# 添加应用可执行文件，并设置执行权限
COPY ./jwkserver /usr/bin/
RUN chmod +x /usr/bin/jwkserver

###############################################################################
#                                   START
###############################################################################

ENTRYPOINT ["jwkserver"]
